/* 全局样式设置 */
body {
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
}

page {
  background-color: #f0f0f0;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.button {
  background-color: #007aff;
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  text-align: center;
  cursor: pointer;
}

.button:hover {
  background-color: #005bb5;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.error {
  color: red;
  font-size: 16px;
}