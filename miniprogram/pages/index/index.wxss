/* 首页样式文件 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f0f0f0;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.button {
  padding: 10px 20px;
  background-color: #007aff;
  color: white;
  border-radius: 5px;
  text-align: center;
  cursor: pointer;
}

.button:hover {
  background-color: #005bb5;
}